<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Nombre del futbolista-->
    <TextView
        android:id="@+id/detalleNombreFutbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>
    <!--Nombre del equipo del futbolista-->
    <TextView
        android:id="@+id/equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/detalleNombreFutbolista"
        />
    <!--Foto del futbolista-->
    <ImageView
        android:id="@+id/fotoFutbolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalleNombreFutbolista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />
    <!--Imagen de la nacionalidad del futbolista-->
    <ImageView
        android:id="@+id/nacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fotoFutbolista"
        android:layout_alignTop="@id/fotoFutbolista"
        android:layout_below="@+id/detalleNombreFutbolista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>